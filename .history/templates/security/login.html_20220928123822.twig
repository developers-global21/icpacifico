{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="container-fluid">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				Usted se encuentra identificado como
				{{ app.user.username }},
				<a href="{{ path('app_logout') }}">Salir</a>
			</div>
		{% endif %}
		<div class="row ">
			<div class="col-12 col-md-6 col-lg-6">
				<img src="../assets/images/bmdistrito2.png" class='div_login'>
			</div>

			<div classs="col-12 col-sm-10 col-md-8 col-lg-4 offset-sm-1 offset-md-2 offset-lg-1" align='center'>
				<h1>&nbsp;</h1>
				<div class="centrado">
					<div class="card">
						<div class="card-header text-center">
							<img class='img-fluid' src="assets/images/logo-top.png" width='200px'>
						</div>
						<div class="card-body">
							<form method="post">
								<div class="row">
									<div class="col-12 col-md-12 col-lg-12">
										<label for="username">Email:</label>
										<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus/>
									</div>
								</div>
								<div class="row">
									<div class="col-12 col-md-12 col-lg-12">
										<label for="password">Password:</label>
										<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required/>
										<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
									</div>
								</div>
								<div class="row">&nbsp;</div>
								<div class="row">
									<div class="col-12 col-md-12 col-lg-12 text-right">
										<button class='btn btn-primary boton02' type="submit">Entrar</button>
									</div>
								</div>

							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
