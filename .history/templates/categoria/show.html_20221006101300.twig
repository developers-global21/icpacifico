{% extends 'base_admin2.html.twig' %}
{% block title %}Categoria
{% endblock %}
{% block javascripts %}
	<script src="/assets/js/validacion_delete_categoria.js"></script>
{% endblock %}
{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-12 col-md-6 col-lg-6" style='margin:auto !important'>
				<div class="card">
					<div class="card-header">
						<h3>Categoria</h3>
					</div>
					<div class="card-body">
						<table class="table">
							<tbody>
								<tr>
									<th>Id</th>
									<td>{{ categorium.id }}</td>
								</tr>
								<tr>
									<th>Nombre</th>
									<td>{{ categorium.nombre }}</td>
								</tr>
							</tbody>
						</table>
					</div>
					<div class="row">
						<div class="col-4 col-md-4 col-lg-4 text-center">
							<button class="btn btn-outline-secondary btn-lg" title='Regresar al listado' onclick="document.location='{{ path('app_categoria_index') }}'">
								<img src="../../assets/images/icons8-undo-96.png" class='icon_tools_edit'>
							</button>
						</div>
						<div class="col-4 col-md-4 col-lg-4 text-center">
							<button class="btn btn-outline-primary btn-lg" title='Editar esta Categoria' onclick="document.location='{{ path('categoria_edit', {'id': categorium.id}) }}'">
								<img src="../../assets/images/icons8-edit-tag-96.png" class='icon_tools_edit'>
							</button>
						</div>
						<div class="col-4 col-md-4 col-lg-4 text-center">
							<button class="btn btn-outline-danger btn-lg" title='Eliminar esta Categoria' onclick="javascript:borrar({{categorium.id }})">
								<img src="../../assets/images/icons8-remove-tag-96.png" class='icon_tools_edit'>
							</button>
						</div>
					</div>
					<div class="row">
						<div class="col-12">&nbsp;</div>
					</div>
				</div>
			</div>

		</div>
	</div>
{% endblock %}
